<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="travel.plan.data.mapper.UserMapper">
    <select id="getUserById" resultType="UserDTO">
        select * from test where id = #{testId}
    </select>

    <select id="selectAll" resultType="UserDTO">
        select * from test
    </select>

    <select id="checkId" resultType="Integer" parameterType="hashMap">
        select count(*) from USER where USER_NICK = #{username}
    </select>

    <insert id="userJoin" parameterType="hashMap" keyProperty="USER_ID">
        <selectKey resultType="Integer" keyProperty="USER_ID" order="BEFORE">
            select MAX(USER_ID) +1 from USER
        </selectKey>
        insert into USER(USER_NICK, USER_PWD, REG_DTM, REGR_ID)
         values(#{username}, #{password}, #{reg}, #{USER_ID})
    </insert>
</mapper>