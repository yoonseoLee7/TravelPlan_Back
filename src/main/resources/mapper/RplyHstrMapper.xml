<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="travel.plan.data.mapper.RplyHstrMapper">
    <insert id="saveComment" parameterType="RplyHstrDTO">
        insert into RPLY_HSTR(RPLY_CTT,DEL_YN,REG_DTM,REGR_ID,CORC_DTM,CORR_ID,UPPR_RPLY_ID,POI_ID,CONT_TYPE_ID) values(
            #{rplyCtt},
            #{delYn},
            #{regDtm},
            #{regrId},
            #{corcDtm},
            #{corrId},
            #{upprRplyId},
            #{poiId},
            #{contTypeId}
        )
    </insert>

    <select id="getCommentsForPoi" resultType="java.util.HashMap" parameterType="String">
        select p.RPLY_ID,p.RPLY_CTT,p.REG_DTM,p.UPPR_RPLY_ID,p.POI_ID,c.RPLY_CTT,c.REG_DTM
        from RPLY_HSTR as p 
        left join RPLY_HSTR as c on p.UPPR_RPLY_ID = c.RPLY_ID
        where p.POI_ID = #{poiId}
        <!-- and p.DEL_YN = 'N'
        order by p.REG_DTM limit 5 -->
    </select>

    <select id="getCommentsContType" resultType="java.util.HashMap" parameterType="String">
        select p.RPLY_ID,p.RPLY_CTT,p.REG_DTM,p.UPPR_RPLY_ID,p.CONT_TYPE_ID,c.RPLY_CTT,c.REG_DTM
        from RPLY_HSTR as p 
        left join RPLY_HSTR as c on p.UPPR_RPLY_ID = c.RPLY_ID
        where p.CONT_TYPE_ID = #{contTypeId}
        <!-- and p.DEL_YN = 'N'
        order by p.REG_DTM limit 5 -->
    </select>
</mapper>