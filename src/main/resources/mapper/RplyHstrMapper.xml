<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="travel.plan.data.mapper.RplyHstrMapper">
    <insert id="saveComment" parameterType="RplyHstrDTO">
        <selectKey resultType="int" keyProperty="rplyId" order="AFTER">
        SELECT LAST_INSERT_ID()
         </selectKey>
        insert into RPLY_HSTR(RPLY_ID,RPLY_CTT,DEL_YN,REG_DTM,REGR_ID,CORC_DTM,CORR_ID,UPPR_RPLY_ID,CONT_TYPE_ID) values(
            #{rplyId},
            #{rplyCtt},
            #{delYn},
            #{regDtm},
            #{regrId},
            #{corcDtm},
            #{corrId},
            #{upprRplyId},
            #{contTypeId}
        )
    </insert>

    <select id="getComments" resultType="hashMap" parameterType="String">
        select * from RPLY_HSTR where cont_type_id = #{contTypeId} and del_yn = 'N'
        order by reg_dtm desc limit 5
    </select>
</mapper>